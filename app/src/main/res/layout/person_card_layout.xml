<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_person_card_PCL"
    android:background="@drawable/card_background"
    android:padding="@dimen/PCL_padding"
    android:layout_marginTop="@dimen/PCL_margin_top"
    android:layout_marginBottom="@dimen/PCL_margin_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_username_PCL"
        android:text="@string/login"
        android:textSize="@dimen/tv_username_PCL_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_name_PCL"
        android:text="@string/kobe_bryant"
        android:layout_marginTop="@dimen/tv_name_PCL_margin_top"
        android:textSize="@dimen/tv_name_PCL_text_size"
        android:textStyle="italic|bold"
        android:textColor="#d500f9"
        android:layout_below="@id/tv_username_PCL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>